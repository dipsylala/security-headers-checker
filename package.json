{
  "name": "security-headers-checker",
  "version": "1.0.0",
  "description": "A web application to check security headers and SSL configuration of websites",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "node scripts/build.js",
    "postinstall": "echo 'Dependencies installed successfully!'",
    "serve": "npm start",
    "clean": "rimraf build",
    "prebuild": "npm run clean",
    "test": "npm run test:integration",
    "test:integration": "node test/test-runner.js",
    "test:all": "node test/integration/run-all-tests.js",
    "test:ssl": "node test/integration/ssl-certificate.test.js",
    "test:enhanced-ssl": "node test/integration/comprehensive-ssl.test.js",
    "test:sslyze": "node test/integration/sslyze-analysis.test.js",
    "test:headers": "node test/integration/security-headers.test.js",
    "test:web-security": "node test/integration/web-security.test.js",
    "test:badssl": "node test/integration/badssl-scenarios.test.js",
    "test:performance": "node test/integration/performance.test.js",
    "test:core": "node test/integration/ssl-certificate.test.js && node test/integration/security-headers-analysis.test.js && node test/integration/web-security.test.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:check": "eslint . --max-warnings 0"
  },
  "keywords": [
    "security",
    "headers",
    "ssl",
    "web-security",
    "bootstrap"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "node-fetch": "^3.3.2",
    "tls": "^0.0.1",
    "url": "^0.11.3",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "eslint": "^9.32.0",
    "fs-extra": "^11.2.0",
    "nodemon": "^3.0.2",
    "rimraf": "^5.0.5"
  }
}
